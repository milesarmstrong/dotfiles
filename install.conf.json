[
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"]
        ]
    },
    {
        "shell": [
           ["mkdir -p ~/.config/fish", "Checking folder structure exists"]
        ]
    },
    {
        "clean": [
            "~",
            "~/.config/fish"
        ]
    },
    {
        "link": {
            "~/.config/fish/config.fish" : "config/fish/config.fish",
            "~/.gitconfig": "gitconfig",
            "~/.vimrc": "vimrc"
        }
    }
]
