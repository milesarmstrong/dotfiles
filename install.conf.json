[
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"],
            ["mkdir -p ~/.config/fish", "Checking fish config folder exists"],
            ["mkdir -p ~/.vim/bundle", "Checking vim plugins folder exists"]
        ]
    },
    {
        "clean": [
            "~",
            "~/.config/fish",
            "~/.vim"
        ]
    },
    {
        "link": {
            "~/.config/fish/config.fish" : "config/fish/config.fish",
            "~/.config/starship.toml" : "config/starship.toml",
            "~/.gitconfig": "gitconfig",
            "~/.vimrc": "vimrc",
            "~/.vim/bundle/Vundle.vim" : "Vundle.vim/"
        }
    },
    {
        "shell": [
            ["./fonts/install.sh", "Installing powerline fonts"]
        ]
    }
]
